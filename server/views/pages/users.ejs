<%- include('../partials/header.ejs', {loggedIn: true, page: 'users'}) %>

<style>
	.users-table .fas { font-size: larger; }
	.action { border: none; background: none; opacity: 0.1; transition: opacity 0.2s; padding: 5px 5px; margin: 0 5px; }
	.action:hover { opacity: 0.75 !important; }
	.action:focus { outline: 1px solid #999; opacity: 1 !important; }
	.users-table tbody tr { height: 44px; }
	.users-table td { vertical-align: middle; }
	.users-table tr:hover .action { opacity: 0.25; }
</style>
<script>
	function verifyAction() {
		var user = event.target.elements['userName'].value || '';
		var question = 'Do you want to do this action?';

		switch (event.submitter && event.submitter.name) {
			case 'action_remove': question = 'Do you really want to remove ' + user + '?'; break;
			case 'action_promote': question = 'Do you really want to promote ' + user + '?'; break;
			case 'action_revoke': question = 'Do you really want to revoke the admin rights of ' + user + '?'; break;
		}
		if (!window.confirm(question)) {
			event.preventDefault();
		}
	}
</script>

<h1 class="h2 mt-3">User management</h1>

<table class="table table-striped table-sm users-table">
	<thead>
		<tr>
			<th style="width: 1em;"></th>
			<th>Name</th>
			<th>Email</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% for (let usr of users) { %>
			<tr>
				<td>
					<% if (usr.isAdmin) { %>
						<span class="fas fa-user-shield" title="Admin"></span>
					<% } %>
				</td>
				<td><%=usr.name %></td>
				<td><%=usr.email %></td>
				<td>
					<% if (usr.id !== user.id) { %>
						<form method="post" onsubmit="verifyAction()">
							<input type="hidden" name="userId" value="<%=usr.id%>" />
							<input type="hidden" name="userName" value="<%=usr.name%>" />
							<% if (usr.isAdmin) { %>
								<button type="submit" name="action_revoke" class="action fas fa-shield-virus" title="Revoke admin rights"></button>
							<% } else { %>
								<button type="submit" name="action_promote" class="action fas fa-shield-alt" title="Promote user as admin"></button>
							<% } %>
							<button type="submit" name="action_remove" class="action fas fa-trash" title="Remove user"></button>
						</form>
					<% } %>
				</td>
			</tr>
		<% } %>
	</tbody>
</table>

<%- include('../partials/footer.ejs') %>
