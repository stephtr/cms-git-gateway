<%- include('../partials/header.ejs', { page: 'access' }) %>

<h1 class="h2 mt-3">Site management</h1>

<table class="table table-striped table-sm data-table">
	<thead>
		<tr>
			<th>Domain</th>
			<th>Type</th>
			<th>Location</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% for (let site of sites) { %>
			<tr>
				<td><%=site.domain %></td>
				<td><%=site.proxyType %></td>
				<td><%=site.url %></td>
				<td>
					<form method="post" onsubmit="verifyAction()">
						<input type="hidden" name="siteDomain" value="<%=site.domain%>" />
						<button type="submit" name="action_remove" class="action-button fas fa-trash" title="Remove site"></button>
					</form>
				</td>
			</tr>
		<% } %>
	</tbody>
</table>

<%- include('../partials/footer.ejs') %>
